{
  "name": "dmeet",
  "packageManager": "yarn@4.3.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "lint": "eslint ./packages --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint ./packages --fix --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier . --write",
    "lint-staged": "lint-staged --allow-empty",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.6",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint ./packages --fix --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
    ]
  }
}
